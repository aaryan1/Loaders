<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <teamdapsr.loaders.lib.ConcentricCircleView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/view"
	    custom:min_radius="40"
	    custom:max_radius="120"
	    custom:duration="3000"
	    custom:animate_color="false"
	    custom:circles_count="15"/>

    <teamdapsr.loaders.lib.ConcentricCircleView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/view2"
        custom:min_radius="10"
        custom:max_radius="400"
        custom:duration="10000"
        custom:animate_color="true"
        custom:circles_count="3"
        custom:start_color="#888888"
        custom:end_color="#bbbbbb"/>

</LinearLayout>
